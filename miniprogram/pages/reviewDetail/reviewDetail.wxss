.detail{
  margin: 100rpx auto 50rpx;
  text-align: center;
  background-color: white;
  border: 1px solid #eee;
  width: 80%;
  min-height:480px; 
  padding: 20rpx;
  position: relative;
}
.img{
  width: 30%;
  margin-top: -50rpx;
}
.name{
  font-size: 1.2em;
  font-weight: bold;
  margin-bottom: 10px;
}
.username,.review-content{
  font-size: 0.8em;
  text-align: center;
  padding-left: 20rpx;
  line-height: 2.8em;
}
.info,.buttons,.review{
  display: flex;
  

}
.review-content{
  margin-left: 40px;
  
}
.avatar{
  height: 80rpx;
  width: 80rpx;
}

.buttons{
  position: absolute;
  bottom: 10px;
  left: 10px;
  right: 10px;

}
button{
  border: 1px solid #ccc;
}

.content,.review{
  min-height: 120rpx;
  padding: 20rpx;
}